generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Supabase connection string
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  image       String
  stack       String[]
  linkRepo    String
  linkLive    String?
  createdAt   DateTime @default(now())
}

model TechStack {
  id       Int    @id @default(autoincrement())
  name     String
  icon     String
  category String
}

model About {
  id      Int    @id @default(autoincrement())
  content String
}
